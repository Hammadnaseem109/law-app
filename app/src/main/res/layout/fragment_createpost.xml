<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFBF4"
    tools:context=".UserActivity.CreatepostFragment">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:textColor="@color/borron"
       android:textSize="20sp"
       android:textStyle="bold"
       android:text="Create post"/>
   <ImageView
       android:layout_width="match_parent"
       android:layout_margin="10dp"
       android:scaleType="fitXY"
       android:src="@drawable/image_gallery"
       android:id="@+id/imageviewID"
       android:layout_height="250dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:hint="Write a Comment here"
            android:padding="10dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:id="@+id/commenthereID"

            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
   <androidx.appcompat.widget.AppCompatButton
       android:layout_width="match_parent"
       android:textStyle="bold"
       android:id="@+id/CreatebuttonID"
       android:textColor="@color/white"
       android:layout_margin="20dp"
       android:layout_height="wrap_content"
       android:background="@drawable/custombtn"
       android:text="Post"/>
</LinearLayout>