<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFBF4"
    tools:context=".UserActivity.ListofLaywertoUserFragment">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchEdtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/search_bg"
        app:iconifiedByDefault="false"
        app:queryHint="Search Lawyer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/history_title"
        app:layout_constraintTop_toBottomOf="@+id/history_title" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_marginTop="5dp"
       android:textStyle="bold"
       android:textColor="@color/borron"
       android:textSize="20sp"
       android:layout_marginLeft="10dp"
       android:layout_height="wrap_content"
       android:text="List of lawyers"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/listlawyersrecycleviewID"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_height="wrap_content"/>

</LinearLayout>